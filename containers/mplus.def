Bootstrap: docker
From: rocker/tidyverse
Stage: build

%setup
    cp /home/ewan/mplus ${SINGULARITY_ROOTFS}/bin/mplus

%environment

%post
    apt-get update
    apt-get install -y libc6
    R --slave -e 'install.packages("MplusAutomation", repos="https://cloud.r-project.org/")'


%apprun R
exec R "$@"

%apprun Rscript
exec Rscript "$@"

%apprun mplus
exec /bin/mplus

%runscript
exec R "$@"

